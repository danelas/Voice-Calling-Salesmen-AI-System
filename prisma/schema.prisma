// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id              String   @id @default(cuid())
  
  // Personal Information
  firstName       String
  middleInitial   String?
  lastName        String
  exactAge        Int?     // Exact age
  email           String?
  
  // Contact Information
  phone           String   @unique
  phoneType       String?  // Mobile, Home, Work, etc.
  
  // Address Information
  address         String?
  city            String?
  state           String?
  zipCode         String?
  zipCodePlus4    String?  // ZIP+4 extension
  latitude        Float?   // Geographic coordinates
  longitude       Float?
  
  // Property Information
  homeValue       Float?   // Assessed home value
  yearBuilt       Int?     // Year the home was built
  purchasePrice   Float?   // Original purchase price
  homePurchaseDate DateTime? // Date they purchased the home
  yearsInResidence Int?    // Years living at current address
  propertyType    String?  // Single family, Condo, Townhouse, etc.
  
  // Financial Information
  mostRecentMortgageDate   DateTime? // Date of most recent mortgage
  mostRecentMortgageAmount Float?    // Amount of most recent mortgage
  loanToValue     Float?   // Loan to value ratio
  estimatedIncome Float?   // Estimated annual income
  estimatedIncomeCode String? // Income range code
  
  // Personal Demographics
  maritalStatus   String?  // Single, Married, Divorced, etc.
  presenceOfChildren Boolean? // Whether they have children
  numberOfChildren Int?    // Number of children
  education       String?  // Education level
  occupation      String?  // Job/occupation
  language        String?  // Preferred language (en, es, fr, etc.)
  
  // Compliance & Preferences
  dncStatus       Boolean? @default(false) // Do Not Call status
  
  // Business Information (if applicable)
  company         String?
  industry        String?
  
  // Lead Management
  status          LeadStatus @default(NEW)
  source          String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  calls           Call[]
  
  @@map("leads")
}

model Call {
  id              String      @id @default(cuid())
  leadId          String
  campaignId      String?     // For bulk campaigns
  status          CallStatus   @default(SCHEDULED)
  outcome         CallOutcome?
  scheduledAt     DateTime?
  startedAt       DateTime?
  endedAt         DateTime?
  duration        Int?        // in seconds
  sentiment       String?     // POSITIVE, NEUTRAL, NEGATIVE
  confidence      Float?      // 0-1 confidence score
  transcript      String?
  audioUrl        String?
  notes           String?
  followUpDate    DateTime?
  twilioCallSid   String?     // Twilio call identifier
  recordingUrl    String?     // Call recording URL
  recordingSid    String?     // Twilio recording identifier
  recordingDuration Int?      // Recording duration in seconds
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  lead            Lead        @relation(fields: [leadId], references: [id], onDelete: Cascade)
  campaign        Campaign?   @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  interactions    Interaction[]
  analytics       CallAnalytics?
  
  @@map("calls")
}

model Campaign {
  id              String      @id @default(cuid())
  name            String
  status          String      @default("SCHEDULED") // SCHEDULED, RUNNING, PAUSED, COMPLETED, CANCELLED
  totalLeads      Int         @default(0)
  completedCalls  Int         @default(0)
  successfulCalls Int         @default(0)
  script          String?     // Custom script for this campaign
  delayBetweenCalls Int       @default(30) // seconds
  maxConcurrentCalls Int      @default(3)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  startedAt       DateTime?
  completedAt     DateTime?
  
  calls           Call[]
  
  @@map("campaigns")
}

model Interaction {
  id          String          @id @default(cuid())
  callId      String
  interactionType InteractionType
  speaker         Speaker
  content     String
  timestamp   DateTime
  duration    Int?            // in milliseconds
  confidence  Float?
  sentiment   String?
  createdAt   DateTime        @default(now())
  
  call        Call            @relation(fields: [callId], references: [id], onDelete: Cascade)
  
  @@map("interactions")
}

model CallAnalytics {
  id                    String   @id @default(cuid())
  callId                String   @unique
  talkTime              Int      // AI talk time in seconds
  listenTime            Int      // Customer talk time in seconds
  interruptionCount     Int      @default(0)
  questionCount         Int      @default(0)
  objectionCount        Int      @default(0)
  positiveKeywords      String[] // Array of positive keywords detected
  negativeKeywords      String[] // Array of negative keywords detected
  emotionalTone         String?  // Overall emotional tone
  engagementScore       Float?   // 0-1 engagement score
  conversionProbability Float?   // 0-1 probability of conversion
  improvementSuggestions String[] // Array of improvement suggestions
  createdAt             DateTime @default(now())
  
  call                  Call     @relation(fields: [callId], references: [id], onDelete: Cascade)
  
  @@map("call_analytics")
}

model SalesScript {
  id          String   @id @default(cuid())
  name        String
  industry    String?
  scenario    String   // COLD_CALL, FOLLOW_UP, OBJECTION_HANDLING, etc.
  content     String
  variables   Json?    // Dynamic variables for personalization
  isActive    Boolean  @default(true)
  successRate Float?   // Success rate when using this script
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("sales_scripts")
}

model SystemSettings {
  id                    String   @id @default(cuid())
  key                   String   @unique
  value                 String
  description           String?
  updatedAt             DateTime @updatedAt
  
  @@map("system_settings")
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  PROPOSAL_SENT
  NEGOTIATION
  CLOSED_WON
  CLOSED_LOST
  NURTURING
}

enum CallStatus {
  SCHEDULED
  IN_PROGRESS
  COMPLETED
  FAILED
  CANCELLED
}

enum CallOutcome {
  INTERESTED
  NOT_INTERESTED
  CALLBACK_REQUESTED
  MEETING_SCHEDULED
  SALE_MADE
  VOICEMAIL
  NO_ANSWER
  WRONG_NUMBER
}

enum InteractionType {
  GREETING
  PITCH
  QUESTION
  OBJECTION_HANDLING
  CLOSING
  FOLLOW_UP
  OTHER
}

enum Speaker {
  AI
  CUSTOMER
}
